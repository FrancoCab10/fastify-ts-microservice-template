{
  "name": "microservice-template",
  "version": "0.0.1",
  "description": "Fastify typescript microservice template",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --exec 'ts-node src/server.ts'",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "keywords": [
    "fastify",
    "typescript",
    "microservice",
    "template"
  ],
  "author": "Franco Gomez",
  "license": "MIT",
  "_moduleAliases": {
    "@api": "./dist/api",
    "@errors": "./dist/errors",
    "@plugins": "./dist/plugins",
    "@utils": "./dist/utils"
  },
  "dependencies": {
    "fastify": "^3.20.2",
    "fastify-env": "^2.1.1",
    "fastify-oas": "^3.0.8",
    "fastify-plugin": "^3.0.0",
    "isomorphic-fetch": "^3.0.0",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.2",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "fetch-mock": "^9.11.0",
    "jest": "^27.1.1",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  }
}
